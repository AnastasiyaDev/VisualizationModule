{% extends '::base.html.twig' %}

{% block title %} TESTS| {{ parent() }}{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="http://code.highcharts.com/highcharts.js"></script>
    <script src="http://code.highcharts.com/modules/exporting.js"></script>
    <script src="https://www.gstatic.com/charts/loader.js"></script>

{% endblock %}

{% block body %}
    <a href="{{ path('userPage',{'id':user.id}) }}" class="btn">Назад</a> <br>

<button id="Highcharts" type="button" class="btn btn-primary">Highcharts</button>
<button id="googleCharts" type="button" class="btn btn-primary">Google Charts</button>
<button id="showSplineChart" type="button" class="btn btn-primary">Show Spline chart</button>


<div id="charContainer"></div>

<script>

    var arr1 = [];
    var arr2 = [];
    for(var i = 1; i<500; i++)
    {
        var k = Math.floor(Math.random() * (1000 - 1));
        var l = Math.floor(Math.random() * (900 - 10));

        arr1.push(k);
        arr2.push(l);

    }

    $(function(){
        $("#Highcharts").on("click", function(){
            $('#charContainer').highcharts({
            chart: {
                type: 'column',
                zoomType: 'x'
            },
            title: {
                text: ' '
            },
            subtitle: {
            },
            xAxis: {
                categories: [

                ]
            },
            yAxis: {
                title: {
                    text: 'xxxx'
                }
            },
            credits: {
                enabled: false
            },
            series: [{
                name: 'TEST1',
                data: arr1
                }, {
                name: 'TEST2',
                data: arr2
            }
            ]
        });
        });
    });



    $(function(){
        $("#showSplineChart").on("click", function(){
            $('#charContainer').highcharts({
                chart: {
                    type: 'spline',
                    marginRight: 120,
                    zoomType: 'xy'
                },
                title: {
                    text: ' '
                },
                subtitle: {
                },
                legend: {
                    align: 'right',
                    verticalAlign: 'top',
                    layout: 'vertical',
                    itemMarginBottom: 10,
                    x: 0,
                    y: 100
                },
                xAxis: {
                    categories: arr1
                },
                yAxis: {
                    title: {
                        text: 'xxxx'
                    }
                },
                plotOptions: {
                    line: {
                        dataLabels: {
                            enabled: true
                        },
                        enableMouseTracking: false
                    }
                },
                series: [{
                    name: 'TEST1',
                    data: arr1
                }, {
                    name: 'TEST2',
                    data: arr2
                }
                ]
            });
        });
    });


</script>




{% endblock %}