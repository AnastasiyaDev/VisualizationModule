{% extends 'base.html.twig' %}

{% block body %}

    <div class="content position-fix welcome-reg-content ">

        <h4 class="text-info">Добро пожаловать</h4>

        {% if error %}
            <div id="err" class="al-center"> Неверный пароль</div>
        {% endif %}

        <form id="authorization" autocomplete="off" action="{{ path('login_check') }}" method="post" name="authorization">

            <div>
                <label for="name-field" class="al-center disp-block">Логин: </label>
                <input type="text" id="name-field" name="_username" size="37" tabindex="1" pattern="[a-zA-Z0-9_-\t]+" value="{{ last_username }}" required>
            </div>

            <div>
                <label for="password-field" class="al-center disp-block">Пароль: </label>
                <input type="password" id="password-field" name="_password" size="37" tabindex="2" required>
            </div>

            <input type="hidden" name="_target_patch" value="account">

            <div class="sent-reset marg-auto clearfix">

                <div class="sent-reset marg-auto">
                    <a href="{{ path('registrationPage') }}" class="btn">Регистрация</a>
                    <button type="submit" class="fl-right  btn btn-primary" name="login" id="input" tabindex="0">Вход</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}